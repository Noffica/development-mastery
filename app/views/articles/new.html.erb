<h1>Create a new article here</h1>

<%= form_with(model: @article_new) do |form| %>
  <div>
    <%= form.label(:title) %>
    <br>
    <%= form.text_field(:title) %>
    <% @article_new.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label(:body) %>
    <br>
    <%= form.text_area(:body) %>
    <% @article_new.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
